<UserControl x:Class="PhoneService.Views.StockPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PhoneService.Views"
             xmlns:viewmodels="clr-namespace:PhoneService.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="1000"
             d:DesignWidth="1400"
             d:DataContext="{d:DesignInstance viewmodels:StockVM}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid d:Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <ScrollViewer.Style>
                <Style TargetType="ScrollViewer">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsAdmin}"
                                     Value="False">
                            <Setter Property="Grid.ColumnSpan"
                                    Value="2" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ScrollViewer.Style>
            <ItemsControl ItemsSource="{Binding Stocks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid>
                            <UniformGrid.Style>
                                <Style TargetType="UniformGrid">
                                    <Setter Property="Columns"
                                            Value="1" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}}"
                                                     Value="False">
                                            <Setter Property="Columns"
                                                    Value="2" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </UniformGrid.Style>
                        </UniformGrid>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource back}"
                                CornerRadius="10"
                                Padding="20"
                                Margin="10">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1"
                                                            ScaleY="1" />
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin"
                                            Value="0.5 0.5" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                         To="1.01"
                                                                         Duration="0:0:0.2" />
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                         To="1.01"
                                                                         Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                         To="1"
                                                                         Duration="0:0:0.2" />
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                         To="1"
                                                                         Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border.Effect>
                                <DropShadowEffect Color="Gray"
                                                  BlurRadius="10"
                                                  ShadowDepth="2"
                                                  Opacity="0.3" />
                            </Border.Effect>
                            <StackPanel>
                                <Button Content="X"
                                        Command="{Binding DataContext.Remove, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding }"
                                        Background="Red"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Width="20"
                                        Height="20"
                                        Margin="-10,0,0,-10"
                                        Panel.ZIndex="2"
                                        Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=ItemsControl}, Converter={StaticResource VisibilityConverter}}" />
                                <Border Style="{StaticResource ImageCardStyle}"
                                        Height="400">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding ImagePath, Converter={StaticResource FilePathToImageConverter}}"
                                                    Stretch="Fill" />
                                    </Border.Background>
                                </Border>
                                <TextBlock Text="{Binding Name}"
                                           Style="{StaticResource TitleTextStyle}" />
                                <TextBlock>
                                    <TextBlock Text="{Binding Type, Converter={StaticResource StockTypeToStringConverter}}"
                                               Style="{StaticResource SubtitleTextStyle}" />
                                    <TextBlock>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock"
                                                       BasedOn="{StaticResource SubtitleTextStyle}">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Type, Converter={StaticResource StockTypeToStringConverter}}"
                                                                     Value="Скидка">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <TextBlock Text="{Binding Discount}" />
                                            <TextBlock Text="%"
                                                       Margin="-3,0" />
                                        </TextBlock>
                                    </TextBlock>
                                </TextBlock>
                                <TextBlock Text="{Binding Service.Name, StringFormat=Услуга {0}}"
                                           Style="{StaticResource SubtitleTextStyle}" />
                                <TextBlock Text="{Binding Description}"
                                           Style="{StaticResource TitleTextStyle}"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="1"
                    Grid.Column="1">
            <Border Background="{DynamicResource back}"
                    CornerRadius="10"
                    Padding="20"
                    Margin="10"
                    Visibility="{Binding IsAdmin, Converter={StaticResource VisibilityConverter}}">
                <Border.Effect>
                    <DropShadowEffect Color="Gray"
                                      BlurRadius="10"
                                      ShadowDepth="2"
                                      Opacity="0.3" />
                </Border.Effect>
                <StackPanel>
                    <Border Height="200"
                            Width="300"
                            MouseDown="Border_MouseDown"
                            Background="#007ACC"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="Black"
                                              BlurRadius="10"
                                              ShadowDepth="2"
                                              Opacity="0.3" />
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border"
                                   BasedOn="{StaticResource ImageCardStyle}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Opacity"
                                                Value="0.8" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Image Source="{Binding Image, Converter={StaticResource FileToImageConverter}}"
                               Stretch="Fill" />
                    </Border>
                    <TextBlock Text="{DynamicResource NameText}"
                               d:Text="Имя"
                               FontSize="15"
                               Margin="0,0,0,5" />
                    <TextBox Text="{Binding Name}"
                             Margin="0,0,0,10"
                             MaxLength="100" />
                    <TextBlock Text="{DynamicResource DescriptionText}"
                               d:Text="Описание"
                               FontSize="15"
                               Margin="0,0,0,5" />
                    <TextBox Text="{Binding Description}"
                             Margin="0,0,0,10"
                             Height="150"
                             AcceptsReturn="True" />
                    <CheckBox IsChecked="{Binding WithoutService}"
                              Foreground="{DynamicResource text}"
                              Content="{DynamicResource WithoutServiceText}"
                              d:Content="Без услуги" />
                    <TextBlock Text="{DynamicResource ServiceText}"
                               d:Text="Услуга"
                               FontSize="15"
                               Margin="0,0,0,5"
                               Visibility="{Binding WithoutService, Converter={StaticResource AntiVisibilityConverter}}" />
                    <ComboBox ItemsSource="{Binding Services}"
                              SelectedItem="{Binding SelectedService}"
                              Style="{StaticResource ComboBoxFlatStyleBlock}"
                              Margin="0,0,0,10"
                              Visibility="{Binding WithoutService, Converter={StaticResource AntiVisibilityConverter}}" />
                    <TextBlock Text="{DynamicResource TypeText}"
                               d:Text="Тип"
                               FontSize="15" />
                    <ComboBox ItemsSource="{Binding StockTypes}"
                              SelectedItem="{Binding SelectedStockType, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ComboBoxFlatStyleBlock}"
                              Margin="0,0,0,10">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource StockTypeToStringConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility"
                                        Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedStockType}"
                                                 Value="Discount">
                                        <Setter Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Размер скидки"
                                   FontSize="15"
                                   Margin="0,0,0,5" />
                        <TextBox Text="{Binding Percentage, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,10" />

                    </StackPanel>
                    <Button Content="{DynamicResource AddText}"
                            d:Content="Добавить"
                            Command="{Binding Create}"
                            Style="{StaticResource ModernButton}"
                            Margin="0,10,0,0" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
